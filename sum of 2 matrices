#include <iostream>  
using namespace std;  
int main()  
{  
int a[10][10],b[10][10],add[10][10],sum=0,n,i,j,k;    
cout<<"enter the number of row= \n";    
cin>>n;    
cout<<"enter the number of column= \n";    
cin>>n;    
cout<<"enter the first matrix element=\n";    
for(i=0;i<n;i++)    
{    
for(j=0;j<n;j++)    
{    
cin>>a[i][j];  
}    
}  
  for(i=0;i<n;i++)    
{    
for(j=0;j<n;j++)    
{    
cout<<a[i][j]<<" ";  
}  
    cout<<endl;
} 
cout<<"enter the number of row= \n";    
cin>>n;    
cout<<"enter the number of column= \n";    
cin>>n;    
cout<<"enter the first matrix element=\n";    
for(i=0;i<n;i++)    
{    
for(j=0;j<n;j++)    
{    
cin>>b[i][j];  
}   
}    
for(i=0;i<n;i++)    
{    
for(j=0;j<n;j++)    
{    
cout<<b[i][j]<<" ";  
}   
  cout<<endl;
}    
cout<<"sum of the matrix=\n";    
  
for(i=0;i<n;i++)    
{    
for(j=0;j<n;j++)    
{
add[i][j]=a[i][j]+b[i][j]; 
  cout<<add[i][j]<<" ";    
}  
  cout<<endl;
}
  return 0;
} 
